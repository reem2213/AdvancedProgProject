@model advancedProject.Models.Tasks
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/add.css" asp-append-version="true" />


<nav class="sidebar">
    <div class="sidebar-container">
        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Welcome</a>
        <ul class="nav-list">
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
            </li>
            
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Task" asp-action="List">Users Tasks</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Profile" asp-action="Index">Users Profile</a>
            </li>
            <li class="nav-item">
                <a id="logoutt" class="nav-link" asp-area="Identity" asp-page="/Account/Login" asp-route-returnUrl="@Url.Page("/login")" method="post">Logout</a>
            </li>
        </ul>
    </div>
</nav>
<h1 class="addtitle">Add task</h1>

<form action="" method="post">


<div class="mt-3">
        <label class="form-label" id="labelll">
        Title
    </label>
    <input type="text" class="form-control" asp-for="Title"/>
</div>


<div class="mt-3">
        <label class="form-label" id="labelll">
        Description
    </label>
    <input type="text" class="form-control" asp-for="Description" />
</div>

<div class="mt-3">
        <label class="form-label" id="labelll">
        Date
    </label>
    <input type="date" class="form-control" asp-for="Date" />
</div>

<div class="mt-3">
        <label class="form-label" id="labelll">
        Priority
    </label>
    <select class="form-select" id="prioritySelect" asp-for="Priority">
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
    </select>
</div>
    <div class="form-group">
        <label asp-for="status" class="control-label" id="labelll"></label>
        <select asp-for="status" asp-items="Html.GetEnumSelectList<Status>()" class="form-control"></select>
    </div>

    <div class="mt-3">
        <label asp-for="UserId" class="form-label" id="labelll">User</label>
        <select asp-for="UserId" class="form-select" asp-items="ViewBag.Users"></select>
    </div>

<div class="mt-3">
   
    <button type="submit" class="btn btn-primary">Add</button>
</div>
</form>